<Window x:Class="CrossDock.Windows.GenerateDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossDock.Windows"
        mc:Ignorable="d"
        Title="GenerateDataWindow" Height="150" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="maxArrivalTimesBox" Grid.Column="0" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="maxProductDemandBox" Grid.Column="1" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="avgPrecentageOfProductTypesBox" Grid.Column="2"  Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="OkButton" Content="OK" Grid.Column="2" HorizontalAlignment="Left" Margin="132,90,0,0" VerticalAlignment="Top" Width="45" Click="OkButton_Click"/>
    </Grid>
</Window>
