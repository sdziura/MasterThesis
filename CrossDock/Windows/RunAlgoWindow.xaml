<Window x:Class="CrossDock.Windows.RunAlgoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossDock.Windows"
        mc:Ignorable="d"
        Title="RunAlgoWindow" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button x:Name="RunStaticButon" Content="Run Static" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Width="100" Height="30" Click="RunStaticButon_Click"/>
        <Button x:Name="RunDynamicButon" Content="Run Dynamic" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="3" Width="100" Height="30" Click="RunDynamicButon_Click"/>

        <TextBlock x:Name="StaticInitBlock" Text="{Binding}" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" FontSize="20" FontWeight="Black"/>
        <TextBlock x:Name="StaticWorstBlock" Text="{Binding}" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right"  FontSize="20" FontWeight="Black"/>
        <TextBlock x:Name="StaticResultBlock" Text="{Binding}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" FontSize="30" FontWeight="Bold"/>

        <TextBox x:Name="LateTruckBox" Width="100" Height="40" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center"/>
        <TextBox x:Name="LatenessBox" Width="100" Height="40" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center"/>
        <TextBox x:Name="TimeOfChangeBox" Width="100" Height="40" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center"/>

        <TextBlock Text="Late Truck ID: " Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="23"/>
        <TextBlock Text="How late: " Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="23"/>
        <TextBlock Text="When changed: " Grid.Row="3" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="23"/>
        <TextBlock Text="Result: " Grid.Row="4" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 30 0 0 " FontSize="23"/>
        <TextBlock x:Name="DynamicResultBlock" Text="{Binding}"  Grid.Column="4" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 30 0 0 " FontSize="30" FontWeight="Bold"/>

